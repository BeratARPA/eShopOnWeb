@page "/orders"
@attribute [Authorize(Roles = BlazorShared.Authorization.Constants.Roles.ADMINISTRATORS)]
@inherits BlazorAdmin.Helpers.BlazorComponent
@namespace BlazorAdmin.Pages.OrdersPage

<PageTitle>eShopOnWeb Admin: Manage Orders</PageTitle>

<h1>Manage Orders</h1>

@if (catalogItems == null)
{
    <Spinner></Spinner>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Date</th>
                <th>User</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="cursor-pointer">
            @foreach (var item in catalogItems)
            {

            <td>@item.CatalogType</td>
            <td>@item.CatalogBrand</td>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>
                <button @onclick="@(() => DetailsClick(item.Id))" @onclick:stopPropagation="true" class="btn btn-primary">
                    Details
                </button>
            </td>

            }
        </tbody>
    </table>
}
